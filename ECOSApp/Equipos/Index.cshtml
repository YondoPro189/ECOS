@model Equipo
@{
    ViewData["Title"] = "Gestión de Equipos - ECOS-VOTE";
    var equipos = ViewBag.Equipos as List<Equipo> ?? new List<Equipo>();
}

<div class="equipos-container">
    <!-- Header -->
    <div class="page-header">
        <div class="header-content">
            <div>
                <h1>Gestión de Equipos</h1>
                <p>Administra los equipos participantes del evento</p>
            </div>
            <button type="button" class="btn-add" onclick="showCreateModal()">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="12" y1="5" x2="12" y2="19"></line>
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                </svg>
                Nuevo Equipo
            </button>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert-success">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                <polyline points="22 4 12 14.01 9 11.01"></polyline>
            </svg>
            @TempData["Success"]
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert-error">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="12" y1="8" x2="12" y2="12"></line>
                <line x1="12" y1="16" x2="12.01" y2="16"></line>
            </svg>
            @TempData["Error"]
        </div>
    }

    <!-- Equipos Grid -->
    <div class="equipos-grid">
        @foreach (var equipo in equipos)
        {
            <div class="equipo-card">
                <div class="card-header">
                    <div class="team-avatar-large">@equipo.Nombre.Substring(0, Math.Min(2, equipo.Nombre.Length)).ToUpper()</div>
                    <div class="card-actions">
                        <button class="btn-icon" onclick="editEquipo(@equipo.Id)" title="Editar">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                            </svg>
                        </button>
                        <button class="btn-icon btn-delete" onclick="deleteEquipo(@equipo.Id)" title="Eliminar">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polyline points="3 6 5 6 21 6"></polyline>
                                <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                            </svg>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <h3>@equipo.Nombre</h3>
                    <p class="description">@equipo.Descripcion</p>
                    <div class="card-footer">
                        <span class="badge">
                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="12" cy="12" r="10"></circle>
                                <polyline points="12 6 12 12 16 14"></polyline>
                            </svg>
                            @equipo.FechaRegistro.ToString("dd MMM yyyy")
                        </span>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Modal Crear/Editar Equipo -->
<div id="equipoModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h2 id="modalTitle">Nuevo Equipo</h2>
            <button class="btn-close" onclick="closeModal()">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </button>
        </div>
        <form id="equipoForm" method="post" class="modal-form">
            @Html.AntiForgeryToken()
            <input type="hidden" id="equipoId" name="Id" value="0" />
            
            <div class="form-group">
                <label for="equipoNombre">Nombre del Equipo</label>
                <input type="text" id="equipoNombre" name="Nombre" class="form-control" placeholder="Ej: ECOS-VOTE Innovación" required>
                <span class="text-danger" id="nombreError"></span>
            </div>

            <div class="form-group">
                <label for="equipoDescripcion">Descripción del Proyecto</label>
                <textarea id="equipoDescripcion" name="Descripcion" class="form-control" rows="4" placeholder="Describe el proyecto del equipo..." required></textarea>
                <span class="text-danger" id="descripcionError"></span>
            </div>

            <div class="form-group">
                <label for="equipoFotoUrl">URL de Foto (Opcional)</label>
                <input type="text" id="equipoFotoUrl" name="FotoUrl" class="form-control" placeholder="https://ejemplo.com/imagen.jpg">
            </div>

            <div class="modal-actions">
                <button type="button" class="btn-secondary" onclick="closeModal()">Cancelar</button>
                <button type="submit" class="btn-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"></path>
                        <polyline points="17 21 17 13 7 13 7 21"></polyline>
                        <polyline points="7 3 7 8 15 8"></polyline>
                    </svg>
                    <span id="btnSubmitText">Guardar Equipo</span>
                </button>
            </div>
        </form>
    </div>
</div>

<style>
    .equipos-container { padding: 30px; max-width: 1400px; margin: 0 auto; }
    .page-header { background: white; border-radius: 16px; padding: 30px; margin-bottom: 30px; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05); }
    .header-content { display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 20px; }
    .page-header h1 { margin: 0 0 8px 0; color: #2d3748; font-size: 32px; font-weight: 700; }
    .page-header p { margin: 0; color: #718096; font-size: 16px; }
    .btn-add { display: flex; align-items: center; gap: 8px; padding: 12px 24px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border: none; border-radius: 12px; font-size: 16px; font-weight: 600; cursor: pointer; transition: all 0.3s ease; }
    .btn-add:hover { transform: translateY(-2px); box-shadow: 0 8px 16px rgba(102, 126, 234, 0.3); }
    .alert-success { display: flex; align-items: center; gap: 12px; background: #f0fdf4; border: 1px solid #86efac; color: #166534; padding: 16px; border-radius: 12px; margin-bottom: 24px; font-weight: 500; }
    .alert-error { display: flex; align-items: center; gap: 12px; background: #fee; border: 1px solid #fca5a5; color: #991b1b; padding: 16px; border-radius: 12px; margin-bottom: 24px; font-weight: 500; }
    .equipos-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(340px, 1fr)); gap: 24px; }
    .equipo-card { background: white; border-radius: 16px; padding: 24px; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05); transition: all 0.3s ease; border: 2px solid transparent; }
    .equipo-card:hover { transform: translateY(-4px); box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1); border-color: #667eea; }
    .card-header { display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 16px; }
    .team-avatar-large { width: 60px; height: 60px; border-radius: 12px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); display: flex; align-items: center; justify-content: center; color: white; font-weight: 700; font-size: 20px; }
    .card-actions { display: flex; gap: 8px; }
    .btn-icon { width: 36px; height: 36px; border-radius: 8px; border: none; background: #f7fafc; color: #4a5568; cursor: pointer; display: flex; align-items: center; justify-content: center; transition: all 0.3s ease; }
    .btn-icon:hover { background: #edf2f7; color: #667eea; }
    .btn-icon.btn-delete:hover { background: #fee; color: #e53e3e; }
    .card-body h3 { margin: 0 0 12px 0; color: #2d3748; font-size: 20px; font-weight: 600; }
    .description { color: #718096; font-size: 14px; line-height: 1.6; margin-bottom: 16px; display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden; }
    .card-footer { padding-top: 16px; border-top: 1px solid #e2e8f0; }
    .badge { display: inline-flex; align-items: center; gap: 6px; padding: 6px 12px; background: #f7fafc; color: #718096; border-radius: 8px; font-size: 13px; font-weight: 500; }
    .modal { display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0, 0, 0, 0.5); z-index: 1000; align-items: center; justify-content: center; }
    .modal.active { display: flex; }
    .modal-content { background: white; border-radius: 20px; width: 90%; max-width: 600px; max-height: 90vh; overflow-y: auto; box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3); }
    .modal-header { display: flex; justify-content: space-between; align-items: center; padding: 24px 30px; border-bottom: 1px solid #e2e8f0; }
    .modal-header h2 { margin: 0; color: #2d3748; font-size: 24px; font-weight: 700; }
    .btn-close { width: 40px; height: 40px; border-radius: 50%; border: none; background: #f7fafc; color: #4a5568; cursor: pointer; display: flex; align-items: center; justify-content: center; transition: all 0.3s ease; }
    .btn-close:hover { background: #e2e8f0; }
    .modal-form { padding: 30px; }
    .form-group { margin-bottom: 24px; }
    .form-group label { display: block; color: #4a5568; font-weight: 600; margin-bottom: 8px; font-size: 14px; }
    .form-control { width: 100%; padding: 12px 16px; border: 2px solid #e2e8f0; border-radius: 12px; font-size: 15px; transition: all 0.3s ease; box-sizing: border-box; }
    .form-control:focus { outline: none; border-color: #667eea; box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1); }
    textarea.form-control { resize: vertical; min-height: 100px; }
    .text-danger { color: #e53e3e; font-size: 13px; margin-top: 4px; display: block; }
    .modal-actions { display: flex; gap: 12px; justify-content: flex-end; padding-top: 24px; border-top: 1px solid #e2e8f0; }
    .btn-secondary { padding: 12px 24px; background: #edf2f7; color: #4a5568; border: none; border-radius: 12px; font-size: 15px; font-weight: 600; cursor: pointer; transition: all 0.3s ease; }
    .btn-secondary:hover { background: #e2e8f0; }
    .btn-primary { padding: 12px 24px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border: none; border-radius: 12px; font-size: 15px; font-weight: 600; cursor: pointer; transition: all 0.3s ease; display: flex; align-items: center; gap: 8px; }
    .btn-primary:hover { transform: translateY(-2px); box-shadow: 0 8px 16px rgba(102, 126, 234, 0.3); }
    .btn-primary:disabled { opacity: 0.6; cursor: not-allowed; transform: none; }
</style>

<script>
    // Función para mostrar modal de creación
    function showCreateModal() {
        document.getElementById('equipoModal').classList.add('active');
        document.getElementById('modalTitle').textContent = 'Nuevo Equipo';
        document.getElementById('equipoForm').action = '/Equipos/Create';
        document.getElementById('btnSubmitText').textContent = 'Guardar Equipo';
        
        // Limpiar formulario
        document.getElementById('equipoId').value = '0';
        document.getElementById('equipoNombre').value = '';
        document.getElementById('equipoDescripcion').value = '';
        document.getElementById('equipoFotoUrl').value = '';
        
        // Limpiar errores
        document.getElementById('nombreError').textContent = '';
        document.getElementById('descripcionError').textContent = '';
    }

    // Función para cerrar modal
    function closeModal() {
        document.getElementById('equipoModal').classList.remove('active');
    }

    // Función para editar equipo
    async function editEquipo(id) {
        try {
            // Mostrar indicador de carga
            const modal = document.getElementById('equipoModal');
            modal.classList.add('active');
            document.getElementById('modalTitle').textContent = 'Cargando...';
            
            // Obtener datos del equipo
            const response = await fetch(`/Equipos/Edit/${id}`);
            
            if (!response.ok) {
                throw new Error('Error al cargar el equipo');
            }
            
            const equipo = await response.json();
            
            // Actualizar modal
            document.getElementById('modalTitle').textContent = 'Editar Equipo';
            document.getElementById('equipoForm').action = `/Equipos/Edit/${id}`;
            document.getElementById('btnSubmitText').textContent = 'Actualizar Equipo';
            
            // Llenar formulario con datos
            document.getElementById('equipoId').value = equipo.id;
            document.getElementById('equipoNombre').value = equipo.nombre;
            document.getElementById('equipoDescripcion').value = equipo.descripcion;
            document.getElementById('equipoFotoUrl').value = equipo.fotoUrl || '';
            
            // Limpiar errores
            document.getElementById('nombreError').textContent = '';
            document.getElementById('descripcionError').textContent = '';
            
        } catch (error) {
            console.error('Error:', error);
            closeModal();
            alert('Error al cargar los datos del equipo. Por favor, intenta de nuevo.');
        }
    }

    // Función para eliminar equipo
    function deleteEquipo(id) {
        if (confirm('¿Estás seguro de eliminar este equipo? Esta acción no se puede deshacer.')) {
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = `/Equipos/Delete/${id}`;
            
            const token = document.querySelector('input[name="__RequestVerificationToken"]');
            if (token) {
                const tokenInput = document.createElement('input');
                tokenInput.type = 'hidden';
                tokenInput.name = '__RequestVerificationToken';
                tokenInput.value = token.value;
                form.appendChild(tokenInput);
            }
            
            document.body.appendChild(form);
            form.submit();
        }
    }

    // Cerrar modal al hacer clic fuera
    document.getElementById('equipoModal')?.addEventListener('click', function(e) {
        if (e.target === this) {
            closeModal();
        }
    });

    // Validación del formulario antes de enviar
    document.getElementById('equipoForm')?.addEventListener('submit', function(e) {
        let isValid = true;
        
        // Validar nombre
        const nombre = document.getElementById('equipoNombre').value.trim();
        if (nombre.length === 0) {
            document.getElementById('nombreError').textContent = 'El nombre es obligatorio';
            isValid = false;
        } else if (nombre.length > 100) {
            document.getElementById('nombreError').textContent = 'El nombre no puede exceder 100 caracteres';
            isValid = false;
        } else {
            document.getElementById('nombreError').textContent = '';
        }
        
        // Validar descripción
        const descripcion = document.getElementById('equipoDescripcion').value.trim();
        if (descripcion.length === 0) {
            document.getElementById('descripcionError').textContent = 'La descripción es obligatoria';
            isValid = false;
        } else {
            document.getElementById('descripcionError').textContent = '';
        }
        
        if (!isValid) {
            e.preventDefault();
        }
    });
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
