        outline: none;
        border-color: #f093fb;
        box-shadow: 0 0 0 3px rgba(240, 147, 251, 0.1);
    }

    textarea.form-control {
        resize: vertical;
        min-height: 80px;
    }

    .text-danger {
        color: #e53e3e;
        font-size: 13px;
        margin-top: 4px;
        display: block;
    }

    .modal-actions {
        display: flex;
        gap: 12px;
        justify-content: flex-end;
        padding-top: 24px;
        border-top: 1px solid #e2e8f0;
    }

    .btn-secondary {
        padding: 12px 24px;
        background: #edf2f7;
        color: #4a5568;
        border: none;
        border-radius: 12px;
        font-size: 15px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-secondary:hover {
        background: #e2e8f0;
    }

    .btn-primary {
        padding: 12px 24px;
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
        border: none;
        border-radius: 12px;
        font-size: 15px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 16px rgba(240, 147, 251, 0.3);
    }
</style>

<script>
    function showModal() {
        document.getElementById('juezModal').classList.add('active');
        document.getElementById('modalTitle').textContent = 'Nuevo Juez';
    }

    function closeModal() {
        document.getElementById('juezModal').classList.remove('active');
    }

    function editJuez(id) {
        document.getElementById('juezModal').classList.add('active');
        document.getElementById('modalTitle').textContent = 'Editar Juez';
        // Aquí cargarías los datos del juez
    }

    function deleteJuez(id) {
        if (confirm('¿Estás seguro de eliminar este juez?')) {
            // Aquí iría la lógica para eliminar
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '/Jueces/Delete/' + id;
            document.body.appendChild(form);
            form.submit();
        }
    }

    // Cerrar modal al hacer clic fuera
    document.getElementById('juezModal')?.addEventListener('click', function(e) {
        if (e.target === this) {
            closeModal();
        }
    });
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}