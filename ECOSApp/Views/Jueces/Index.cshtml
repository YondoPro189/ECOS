        height: 80px;
        border-radius: 50%;
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        margin: 0 auto;
        box-shadow: 0 8px 20px rgba(240, 147, 251, 0.3);
    }

    .judge-avatar.pink {
        background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
        box-shadow: 0 8px 20px rgba(250, 112, 154, 0.3);
    }

    .judge-avatar.cyan {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        box-shadow: 0 8px 20px rgba(79, 172, 254, 0.3);
    }

    .card-body {
        text-align: center;
    }

    .card-body h3 {
        margin: 0 0 12px 0;
        color: #2d3748;
        font-size: 20px;
        font-weight: 600;
    }

    .specialty-badge {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 8px 16px;
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
        border-radius: 20px;
        font-size: 13px;
        font-weight: 600;
        margin-bottom: 12px;
    }

    .specialty-badge.pink {
        background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
    }

    .specialty-badge.cyan {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    }

    .description {
        color: #718096;
        font-size: 14px;
        line-height: 1.6;
        margin-bottom: 20px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .card-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 16px;
        border-top: 1px solid #e2e8f0;
    }

    .stats {
        display: flex;
        gap: 12px;
    }

