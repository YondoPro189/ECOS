        background: #edf2f7;
        color: #f093fb;
    }

    .btn-icon.btn-delete:hover {
        background: #fee;
        color: #e53e3e;
    }

    /* Modal Styles */
    .modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        z-index: 1000;
        align-items: center;
        justify-content: center;
    }

    .modal.active {
