@{
    ViewData["Title"] = "Dashboard - ECOS-VOTE";

    // Extraer datos de ViewBag para mayor claridad
    var totalEquipos = (int)ViewBag.TotalEquipos;
    var totalJueces = (int)ViewBag.TotalJueces;
    var totalVotos = (int)ViewBag.TotalVotos;
    var participacion = (double)ViewBag.Participacion;
    var username = Context.Session.GetString("Username") ?? "Administrador";
    var userInitial = username.Substring(0, 1).ToUpper();
}

<div class="dashboard-container">
    <header class="dashboard-header">
        <div class="header-content">
            <div class="header-left">
                <h1>Panel de Control</h1>
                <p>Sistema de Gesti贸n ECOS-VOTE</p>
            </div>
            <div class="header-right">
                <div class="user-profile">
                    <div class="user-avatar">
                        <span>@userInitial</span>
                    </div>
                    <div class="user-info">
                        <strong>@username</strong>
                        <small>@($"Usuario Logueado")</small>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="cards-container">
        <div class="dashboard-card" onclick="window.location.href='@Url.Action("Index", "Equipos")'">
            <div class="card-icon teams">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                    <circle cx="9" cy="7" r="4"></circle>
                    <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                    <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                </svg>
            </div>
            <div class="card-content">
                <h3>Gesti贸n de Equipos</h3>
                <p>Registrar, editar y eliminar equipos participantes</p>
                <div class="card-stats">
                    <span class="stat-badge">@totalEquipos Equipos</span>
                </div>
            </div>
            <div class="card-arrow">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
            </div>
        </div>

        <div class="dashboard-card" onclick="window.location.href='@Url.Action("Index", "Jueces")'">
            <div class="card-icon judges">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                    <circle cx="8.5" cy="7" r="4"></circle>
                    <polyline points="17 11 19 13 23 9"></polyline>
                </svg>
            </div>
            <div class="card-content">
                <h3>Gesti贸n de Jueces</h3>
                <p>Administrar jueces y evaluadores del evento</p>
                <div class="card-stats">
                    <span class="stat-badge">@totalJueces Jueces</span>
                </div>
            </div>
            <div class="card-arrow">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
            </div>
        </div>

        <div class="dashboard-card" onclick="window.location.href='@Url.Action("Index", "Votaciones")'">
            <div class="card-icon votes">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M3 3v18h18"></path>
                    <path d="M18 17V9"></path>
                    <path d="M13 17V5"></path>
                    <path d="M8 17v-3"></path>
                </svg>
            </div>
            <div class="card-content">
                <h3>Visualizaci贸n de Votaciones</h3>
                <p>Ver resultados y estad铆sticas en tiempo real</p>
                <div class="card-stats">
                    <span class="stat-badge">@totalVotos Votos</span>
                </div>
            </div>
            <div class="card-arrow">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
            </div>
        </div>
    </div>

    <div class="stats-section">
        <h2>Estad铆sticas Generales</h2>
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon purple">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                        <circle cx="9" cy="7" r="4"></circle>
                        <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                        <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                    </svg>
                </div>
                <div class="stat-details">
                    <span class="stat-value">@totalEquipos</span>
                    <span class="stat-label">Equipos Registrados</span>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon blue">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                        <circle cx="8.5" cy="7" r="4"></circle>
                        <polyline points="17 11 19 13 23 9"></polyline>
                    </svg>
                </div>
                <div class="stat-details">
                    <span class="stat-value">@totalJueces</span>
                    <span class="stat-label">Jueces Activos</span>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon green">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M9 11l3 3L22 4"></path>
                        <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"></path>
                    </svg>
                </div>
                <div class="stat-details">
                    <span class="stat-value">@totalVotos</span>
                    <span class="stat-label">Votos Emitidos</span>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon orange">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"></circle>
                        <polyline points="12 6 12 12 16 14"></polyline>
                    </svg>
                </div>
                <div class="stat-details">
                    <span class="stat-value">@participacion.ToString("0.0")%</span>
                    <span class="stat-label">Participaci贸n</span>
                </div>
            </div>
        </div>
    </div>
    
    <div class="top-teams-section">
        <h2> Top 3 Equipos por Puntuaci贸n Promedio</h2>
        <div class="top-teams-list">
            @if (ViewBag.EquiposMejorVotados != null && ViewBag.EquiposMejorVotados.Count > 0)
            {
                int rank = 1;
                foreach (var equipo in ViewBag.EquiposMejorVotados)
                {
                    <div class="team-rank-card rank-@rank">
                        <span class="rank-number">#@rank</span>
                        <div class="team-details">
                            <strong>@equipo.EquipoNombre</strong>
                            <small>@equipo.TotalVotos Votos</small>
                        </div>
                        <div class="team-score">
                            <span class="score-value">@equipo.PromedioVotos.ToString("0.0")</span>
                            <span class="score-label">Promedio</span>
                        </div>
                    </div>
                    rank++;
                }
            }
            else
            {
                <p class="no-data">A煤n no hay suficientes votos para generar un Top 3.</p>
            }
        </div>
    </div>

</div>

