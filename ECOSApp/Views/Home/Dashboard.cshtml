        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        flex-shrink: 0;
    }

    .card-icon.teams {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .card-icon.judges {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    }

    .card-icon.votes {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    }

    .card-content {
        flex: 1;
    }

    .card-content h3 {
        margin: 0 0 8px 0;
        color: #2d3748;
        font-size: 20px;
        font-weight: 600;
    }

    .card-content p {
        margin: 0 0 12px 0;
        color: #718096;
        font-size: 14px;
    }

    .card-stats {
        display: flex;
        gap: 10px;
    }

    .stat-badge {
        background: #edf2f7;
        color: #4a5568;
        padding: 6px 12px;
        border-radius: 8px;
        font-size: 13px;
        font-weight: 600;
    }

    .card-arrow {
        color: #cbd5e0;
        flex-shrink: 0;
    }

    .stats-section {
        background: white;
        border-radius: 16px;
        padding: 30px;
        margin-bottom: 40px; /* A帽adido para separar Top Teams */
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .stats-section h2 {
        margin: 0 0 24px 0;
        color: #2d3748;
        font-size: 24px;
        font-weight: 600;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 20px;
    }

    .stat-card {
        display: flex;
        align-items: center;
        gap: 16px;
