@model ECOS.Shared.Models.Juez

@{
    ViewData["Title"] = "Eliminar Juez";
}

<h1>Eliminar Juez</h1>

<div class="alert alert-danger" role="alert">
    <h4 class="alert-heading">⚠️ ¿Está seguro que desea eliminar este juez?</h4>
    <p>Esta acción marcará el juez como inactivo.</p>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            @if (!string.IsNullOrEmpty(Model.FotoUrl))
            {
            <img src="@Model.FotoUrl" class="card-img-top" alt="@Model.Nombre" style="max-height: 300px; object-fit: cover;">
            }
            <div class="card-body">
                <h3>@Model.Nombre</h3>
                <hr />

                <dl class="row">
                    <dt class="col-sm-3">Usuario</dt>
                    <dd class="col-sm-9">@Model.Usuario</dd>

                    <dt class="col-sm-3">Fecha de Registro</dt>
                    <dd class="col-sm-9">@Model.FechaRegistro.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-3">¿Ya Votó?</dt>
                    <dd class="col-sm-9">
                        @if (Model.YaVoto)
                        {
                        <span class="badge bg-success">Sí</span>
                        }
                        else
                        {
                        <span class="badge bg-warning">No</span>
                        }
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</div>