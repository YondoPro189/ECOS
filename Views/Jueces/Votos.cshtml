@model IEnumerable<ECOS.Digital.Models.Voto>
@{
    ViewData["Title"] = "Visualizaci√≥n de Votos";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>üó≥Ô∏è Visualizaci√≥n de Votos</h1>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No se han registrado votos a√∫n.
        </div>
    }
    else
    {
        <!-- Estad√≠sticas Generales -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card text-white bg-info">
                    <div class="card-body text-center">
                        <h5 class="card-title">Total de Votos</h5>
                        <p class="display-4">@Model.Count()</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-warning">
                    <div class="card-body text-center">
                        <h5 class="card-title">Proyectos Votados</h5>
                        <p class="display-4">@Model.Select(v => v.EquipoId).Distinct().Count()</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-success">
                    <div class="card-body text-center">
                        <h5 class="card-title">Promedio General</h5>
                        <p class="display-4">@Model.Average(v => v.Puntuacion).ToString("F2")</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filtros -->
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">üîç Filtros</h5>
                <form method="get" class="row g-3">
                    <div class="col-md-4">
                        <label for="equipoFilter" class="form-label">Proyecto</label>
                        <select id="equipoFilter" class="form-select">
                            <option value="">Todos los proyectos</option>
                            @foreach (var equipo in Model.Select(v => v.Equipo).Distinct())
                            {
                                <option value="@equipo.Id">@equipo.Nombre</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label for="puntuacionFilter" class="form-label">Puntuaci√≥n</label>
                        <select id="puntuacionFilter" class="form-select">
                            <option value="">Todas las puntuaciones</option>
                            <option value="5">5 - Excelente</option>
                            <option value="4">4 - Muy Bueno</option>
                            <option value="3">3 - Bueno</option>
                            <option value="2">2 - Regular</option>
                            <option value="1">1 - Deficiente</option>
                        </select>
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="button" class="btn btn-secondary w-100" onclick="resetFilters()">
                            Limpiar Filtros
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Tabla de Votos -->
        <div class="table-responsive">
            <table class="table table-hover table-striped" id="votosTable">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Fecha y Hora</th>
                        <th>Proyecto</th>
                        <th>Juez</th>
                        <th>Tipo de Juez</th>
                        <th>Puntuaci√≥n</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int contador = 1;
                    }
                    @foreach (var voto in Model)
                    {
                        <tr data-equipo="@voto.EquipoId" data-puntuacion="@voto.Puntuacion">
                            <td>@contador</td>
                            <td>@voto.FechaVoto.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                <strong>@voto.Equipo?.Nombre</strong>
                                <br />
                                <small class="text-muted">@voto.Equipo?.TecnologiaUsada</small>
                            </td>
                            <td>@voto.UsuarioVotante?.UserName</td>
                            <td>
                                @if (voto.UsuarioVotante?.UserType == "Maestro")
                                {
                                    <span class="badge bg-primary">Maestro</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Invitado</span>
                                }
                            </td>
                            <td class="text-center">
                                @if (voto.Puntuacion == 5)
                                {
                                    <span class="badge bg-success fs-6">‚≠ê 5</span>
                                }
                                else if (voto.Puntuacion == 4)
                                {
                                    <span class="badge bg-info fs-6">‚≠ê 4</span>
                                }
                                else if (voto.Puntuacion == 3)
                                {
                                    <span class="badge bg-warning text-dark fs-6">‚≠ê 3</span>
                                }
                                else if (voto.Puntuacion == 2)
                                {
                                    <span class="badge bg-warning fs-6">‚≠ê 2</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger fs-6">‚≠ê 1</span>
                                }
                            </td>
                        </tr>
                        contador++;
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <p class="text-muted">
                <strong>Total de votos registrados:</strong> @Model.Count()
            </p>
        </div>
    }

    <div class="mt-4">
        <a asp-controller="Home" asp-action="Dashboard" class="btn btn-secondary">
            Volver al Dashboard
        </a>
    </div>
</div>

@section Scripts {
    <script>
        // Filtrado din√°mico de la tabla
        document.getElementById('equipoFilter').addEventListener('change', filterTable);
        document.getElementById('puntuacionFilter').addEventListener('change', filterTable);

        function filterTable() {
            const equipoFilter = document.getElementById('equipoFilter').value;
            const puntuacionFilter = document.getElementById('puntuacionFilter').value;
            const rows = document.querySelectorAll('#votosTable tbody tr');

            rows.forEach(row => {
                const equipo = row.getAttribute('data-equipo');
                const puntuacion = row.getAttribute('data-puntuacion');
                
                const equipoMatch = !equipoFilter || equipo === equipoFilter;
                const puntuacionMatch = !puntuacionFilter || puntuacion === puntuacionFilter;

                if (equipoMatch && puntuacionMatch) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }

        function resetFilters() {
            document.getElementById('equipoFilter').value = '';
            document.getElementById('puntuacionFilter').value = '';
            filterTable();
        }
    </script>
}

<style>
    .table tbody tr {
        transition: background-color 0.2s;
    }
    .table tbody tr:hover {
        background-color: #f8f9fa;
    }
</style>