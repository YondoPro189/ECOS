@model IEnumerable<ECOS.Digital.Models.ApplicationUser>
@{
    ViewData["Title"] = "Registro de Jueces";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>üë®‚Äç‚öñÔ∏è Registro de Jueces</h1>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No hay jueces registrados en el sistema.
        </div>
    }
    else
    {
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card text-white bg-primary">
                    <div class="card-body">
                        <h5 class="card-title">üë®‚Äçüè´ Maestros</h5>
                        <p class="display-4">@Model.Count(u => u.UserType == "Maestro")</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card text-white bg-success">
                    <div class="card-body">
                        <h5 class="card-title">üéì Invitados</h5>
                        <p class="display-4">@Model.Count(u => u.UserType == "Invitado")</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Nombre de Usuario</th>
                        <th>Email</th>
                        <th>Tipo</th>
                        <th>Votos Emitidos</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int contador = 1;
                    }
                    @foreach (var juez in Model)
                    {
                        <tr>
                            <td>@contador</td>
                            <td>
                                <strong>@juez.UserName</strong>
                            </td>
                            <td>@juez.Email</td>
                            <td>
                                @if (juez.UserType == "Maestro")
                                {
                                    <span class="badge bg-primary">üë®‚Äçüè´ Maestro</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">üéì Invitado</span>
                                }
                            </td>
                            <td class="text-center">
                                <span class="badge bg-secondary">@juez.VotosEmitidos.Count</span>
                            </td>
                        </tr>
                        contador++;
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <p class="text-muted">
                <strong>Total de jueces:</strong> @Model.Count()
            </p>
        </div>
    }

    <div class="mt-4">
        <a asp-controller="Home" asp-action="Dashboard" class="btn btn-secondary">
            Volver al Dashboard
        </a>
    </div>
</div>