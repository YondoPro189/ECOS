@model IEnumerable<ECOS.Shared.Models.Juez>

    @{
    ViewData["Title"] = "Jueces";
    }

    <h1>Jueces Registrados</h1>

    <p>
        <a asp-action="Create" class="btn btn-success">➕ Crear Nuevo Juez</a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Foto</th>
                    <th>Usuario</th>
                    <th>Nombre</th>
                    <th>Fecha Registro</th>
                    <th>¿Ya Votó?</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var juez in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(juez.FotoUrl))
                        {
                        <img src="@juez.FotoUrl" alt="@juez.Nombre" class="rounded-circle" style="width: 50px; height: 50px; object-fit: cover;">
                        }
                        else
                        {
                        <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                            <span class="text-white">👤</span>
                        </div>
                        }
                    </td>
                    <td>@juez.Usuario</td>
                    <td>@juez.Nombre</td>
                    <td>@juez.FechaRegistro.ToString("dd/MM/yyyy")</td>
                    <td>
                        @if (juez.YaVoto)
                        {
                        <span class="badge bg-success">✓ Sí</span>
                        }
                        else
                        {
                        <span class="badge bg-warning">✗ No</span>
                        }
                    </td>
                    <td>
                        @if (juez.Activo)
                        {
                        <span class="badge bg-success">Activo</span>
                        }
                        else
                        {
                        <span class="badge bg-danger">Inactivo</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@juez.Id" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="Details" asp-route-id="@juez.Id" class="btn btn-sm btn-info">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@juez.Id" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
{
    <div class="alert alert-info" role="alert">
        No hay jueces registrados. <a asp-action="Create">Registra el primero aquí</a>.
    </div>
}
