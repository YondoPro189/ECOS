@model ECOS.Digital.Models.Equipo // Asume que pasas un objeto Equipo (nuevo o existente)
@{
    ViewData["Title"] = Model?.Id == 0 ? "Registrar Mi Proyecto" : "Editar Mi Proyecto";
}

<div class="container py-5">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success" role="alert">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger" role="alert">@TempData["Error"]</div>
    }

    <div class="card shadow-sm p-4">
        <form asp-action="Manage" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="AlumnoLiderId" /> @* Asegurarse de que el líder no se pueda cambiar *@

            <div class="mb-3">
                <label asp-for="Nombre" class="form-label">Nombre del Proyecto</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label">Descripción Detallada</label>
                <textarea asp-for="Descripcion" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="TecnologiaUsada" class="form-label">Tecnología Principal</label>
                <input asp-for="TecnologiaUsada" class="form-control" />
                <span asp-validation-for="TecnologiaUsada" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="UrlDemo" class="form-label">URL del Demo / Repositorio (opcional)</label>
                <input asp-for="UrlDemo" class="form-control" type="url" />
                <span asp-validation-for="UrlDemo" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success btn-lg">Guardar Proyecto</button>
            <a asp-action="Dashboard" asp-controller="Home" class="btn btn-secondary btn-lg">Cancelar</a>
        </form>
    </div>
</div>