@model ECOS.Shared.Models.Equipo

@{
    ViewData["Title"] = "Detalles del Equipo";
}

<h1>Detalles del Equipo</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            @if (!string.IsNullOrEmpty(Model.FotoUrl))
            {
            <img src="@Model.FotoUrl" class="card-img-top" alt="@Model.Nombre" style="max-height: 400px; object-fit: cover;">
            }
            <div class="card-body">
                <h2 class="card-title">@Model.Nombre</h2>
                <hr />

                <dl class="row">
                    <dt class="col-sm-3">Descripción</dt>
                    <dd class="col-sm-9">@Model.Descripcion</dd>

                    <dt class="col-sm-3">Integrantes</dt>
                    <dd class="col-sm-9">@Model.Integrantes</dd>

                    <dt class="col-sm-3">Fecha de Registro</dt>
                    <dd class="col-sm-9">@Model.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</dd>

                    <dt class="col-sm-3">Total de Votos</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-primary fs-5">@Model.Votaciones.Count votos</span>
                    </dd>

                    <dt class="col-sm-3">Estado</dt>
                    <dd class="col-sm-9">
                        @if (Model.Activo)
                        {
                        <span class="badge bg-success">Activo</span>
                        }
                        else
                        {
                        <span class="badge bg-danger">Inactivo</span>
                        }
                    </dd>
                </dl>

                <div class="mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
                </div>
            </div>
        </div>
    </div>
</div>