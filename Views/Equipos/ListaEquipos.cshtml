@model IEnumerable<ECOS.Digital.Models.Equipo>
@{
    ViewData["Title"] = "Lista de Equipos Registrados";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>üìã Equipos Registrados</h1>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Registrar" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Registrar Nuevo Equipo
            </a>
        }
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No hay equipos registrados en este momento.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Nombre del Proyecto</th>
                        <th>Tecnolog√≠a</th>
                        <th>L√≠der</th>
                        <th>Votos Recibidos</th>
                        <th>Promedio</th>
                        @if (User.IsInRole("Admin"))
                        {
                            <th>Acciones</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @{
                        int contador = 1;
                    }
                    @foreach (var equipo in Model)
                    {
                        var promedio = equipo.VotosRecibidos.Any() 
                            ? equipo.VotosRecibidos.Average(v => v.Puntuacion).ToString("F2") 
                            : "Sin votos";
                        
                        <tr>
                            <td>@contador</td>
                            <td>
                                <strong>@equipo.Nombre</strong>
                                @if (!string.IsNullOrEmpty(equipo.UrlDemo))
                                {
                                    <br />
                                    <a href="@equipo.UrlDemo" target="_blank" class="text-primary">
                                        <small>Ver demo</small>
                                    </a>
                                }
                            </td>
                            <td><span class="badge bg-info">@equipo.TecnologiaUsada</span></td>
                            <td>@equipo.AlumnoLider?.UserName</td>
                            <td class="text-center">
                                <span class="badge bg-secondary">@equipo.VotosRecibidos.Count</span>
                            </td>
                            <td class="text-center">
                                @if (equipo.VotosRecibidos.Any())
                                {
                                    <span class="badge bg-success">‚≠ê @promedio</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Sin votos</span>
                                }
                            </td>
                            @if (User.IsInRole("Admin"))
                            {
                                <td>
                                    <a asp-action="Eliminar" asp-route-id="@equipo.Id" 
                                       class="btn btn-sm btn-danger"
                                       onclick="return confirm('¬øEst√° seguro de eliminar este equipo?')">
                                        Eliminar
                                    </a>
                                </td>
                            }
                        </tr>
                        contador++;
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <p class="text-muted">
                <strong>Total de equipos:</strong> @Model.Count()
            </p>
        </div>
    }

    <div class="mt-4">
        <a asp-controller="Home" asp-action="Dashboard" class="btn btn-secondary">
            Volver al Dashboard
        </a>
    </div>
</div>