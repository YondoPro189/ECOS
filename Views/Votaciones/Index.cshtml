@model IEnumerable<ECOS.Shared.Models.Votacion>

    @{
    ViewData["Title"] = "Votaciones";
    }

    <h1>Registro de Votaciones</h1>

    <div class="row mb-3">
        <div class="col-md-12">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="card-title">Acciones</h5>
                    <a asp-action="Resultados" class="btn btn-info">📊 Ver Resultados</a>
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#resetModal">
                        🔄 Resetear Votaciones
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Juez</th>
                    <th>Equipo Votado</th>
                    <th>Fecha y Hora</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var votacion in Model)
            {
                <tr>
                    <td>@votacion.Id</td>
                    <td>
                        @if (votacion.Juez != null)
                        {
                        <strong>@votacion.Juez.Nombre</strong><br />
                        <small class="text-muted">@votacion.Juez.Usuario</small>
                        }
                    </td>
                    <td>
                        @if (votacion.Equipo != null)
                        {
                        <strong>@votacion.Equipo.Nombre</strong>
                        }
                    </td>
                    <td>@votacion.FechaVoto.ToString("dd/MM/yyyy HH:mm:ss")</td>
                </tr>
            }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
{
    <div class="alert alert-info" role="alert">
        No hay votaciones registradas aún.
    </div>
}
else
{
    <div class="alert alert-success" role="alert">
        Total de votos registrados: <strong>@Model.Count()</strong>
    </div>
}

    <!-- Modal de confirmación para resetear -->
    <div class="modal fade" id="resetModal" tabindex="-1" aria-labelledby="resetModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="resetModalLabel">⚠️ Confirmar Reseteo</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p><strong>¿Está seguro que desea resetear todas las votaciones?</strong></p>
                    <p>Esta acción:</p>
                    <ul>
                        <li>Eliminará TODOS los votos registrados</li>
                        <li>Permitirá que todos los jueces vuelvan a votar</li>
                        <li><strong>NO se puede deshacer</strong></li>
                    </ul>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <form asp-action="Resetear" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Sí, Resetear Todo</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
